@model IEnumerable<BarberAdmin.Models.Barber>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoFile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (item.PhotoFile != null)
            {
                <img width="100" src="@Url.Action("GetImage", "Barbers", new { id = item.BarberID })" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.About)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BarberID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BarberID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BarberID })
        </td>
    </tr>
}

</table>
